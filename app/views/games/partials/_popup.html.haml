#start_company_popup
	.title{:style=>"padding-bottom:10px;"}
		Start a New Company
	- @cur_turn.data_hash["companies"].each do |key, value|
		.company{:style=>"padding-top:5px;"}
			%input{ :type=>"radio", :value=>"#{value['abbr']}", :name=>"company_group" }
			%label
				= value["name"]
			.color{ :style=>"background-color:#{value['color']}; width:20px; height:13px; float:right;"}
	= button_to_function 'go', 'start_company_click_handler()', :id => 'start_company_button', :class => 'image_button'
#purchase_stock_popup
	.title{:style=>"padding-bottom:10px;"}
		.purchaseStock
			Purchase Stock
		- @cur_turn.data_hash["companies"].each do |key, value|
			.company{:style=>"padding-top:5px;"}
				%label{:style=>"float:left; width:120px;"}
					= value["name"]
				- [1,2,3].each do |i|
					.purchase_stock{:style=>"width:60px; float:left;"}
						%input{ :type=>"radio", :value=>"#{i}", :name=>"stock_purchase_group_#{key}" }
						%label{ :name=>"stock_radio_#{key}_#{i}"}
							= i.to_s()
	= button_to_function 'Purchase', 'purchase_stock_click_handler()', :id => 'start_company_button', :class => 'image_button'