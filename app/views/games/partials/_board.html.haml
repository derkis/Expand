// Board HAML
.board_content
  = @game.cur_turn.board
.cur_turn
  Current Turn:
  = @game.cur_turn.number + 1
.board_body
  .row
    .cell
    - @board[0].each_index do |column_index|
      .cell= column_index + 1
  - @board.each_with_index do |row_array, row_index|
    .row 
      .cell= (65 + row_index).chr
      - row_array.each_with_index do |cell, column_index|
        .game_cell{ :id => "cell_#{row_index}_#{column_index}", :row => row_index, :column => column_index }
