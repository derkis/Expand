%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %title= @title
    = render 'layouts/stylesheets'
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    .container
      .content
        = render 'layouts/header' 
        = yield
        .push
      = render 'layouts/footer'
      = debug(params) if Rails.env.development?
